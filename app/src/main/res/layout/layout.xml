<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.menno_000.mrpotatohead.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/body"
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:visibility="visible"
            android:contentDescription="@string/bodydesc"
            app:srcCompat="@drawable/body" />

        <ImageView
            android:id="@+id/arms"
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:visibility="invisible"
            android:contentDescription="@string/armsdesc"
            app:srcCompat="@drawable/arms" />

        <ImageView
            android:id="@+id/ears"
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:visibility="invisible"
            android:contentDescription="@string/earsdesc"
            app:srcCompat="@drawable/ears" />

        <ImageView
            android:id="@+id/eyebrows"
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:visibility="invisible"
            android:contentDescription="@string/eyebrowsdesc"
            app:srcCompat="@drawable/eyebrows" />

        <ImageView
            android:id="@+id/eyes"
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:visibility="invisible"
            android:contentDescription="@string/eyesdesc"
            app:srcCompat="@drawable/eyes" />

        <ImageView
            android:id="@+id/glasses"
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:visibility="invisible"
            android:contentDescription="@string/glassesdesc"
            app:srcCompat="@drawable/glasses" />

        <ImageView
            android:id="@+id/hat"
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:visibility="invisible"
            android:contentDescription="@string/hatdesc"
            app:srcCompat="@drawable/hat" />

        <ImageView
            android:id="@+id/mouth"
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:visibility="invisible"
            android:contentDescription="@string/mouthdesc"
            app:srcCompat="@drawable/mouth" />

        <ImageView
            android:id="@+id/mustache"
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:visibility="invisible"
            android:contentDescription="@string/mustachedesc"
            app:srcCompat="@drawable/mustache" />

        <ImageView
            android:id="@+id/nose"
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:visibility="invisible"
            android:contentDescription="@string/nosedesc"
            app:srcCompat="@drawable/nose" />

        <ImageView
            android:id="@+id/shoes"
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:visibility="invisible"
            android:contentDescription="@string/shoesdesc"
            app:srcCompat="@drawable/shoes" />

    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/command"
        android:gravity="center_horizontal"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <CheckBox
                android:id="@+id/armsBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/arms"
                android:onClick="armsClicked"
                tools:layout_editor_absoluteX="34dp"
                tools:layout_editor_absoluteY="331dp" />

            <CheckBox
                android:id="@+id/earsBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ears"
                android:onClick="earsClicked"
                tools:layout_editor_absoluteX="34dp"
                tools:layout_editor_absoluteY="331dp" />

            <CheckBox
                android:id="@+id/eyebrowsBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eyebrows"
                android:onClick="eyebrowsClicked"
                tools:layout_editor_absoluteX="34dp"
                tools:layout_editor_absoluteY="363dp" />

            <CheckBox
                android:id="@+id/eyesBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eyes"
                android:onClick="eyesClicked"
                tools:layout_editor_absoluteX="34dp"
                tools:layout_editor_absoluteY="397dp" />

            <CheckBox
                android:id="@+id/glassesBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/glasses"
                android:onClick="glassesClicked"
                tools:layout_editor_absoluteX="34dp"
                tools:layout_editor_absoluteY="429dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <CheckBox
                android:id="@+id/hatBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hat"
                android:onClick="hatClicked"
                tools:layout_editor_absoluteX="34dp"
                tools:layout_editor_absoluteY="462dp" />

            <CheckBox
                android:id="@+id/mouthBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mouth"
                android:onClick="mouthClicked"
                tools:layout_editor_absoluteX="198dp"
                tools:layout_editor_absoluteY="331dp" />

            <CheckBox
                android:id="@+id/mustacheBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mustache"
                android:onClick="mustacheClicked"
                tools:layout_editor_absoluteX="198dp"
                tools:layout_editor_absoluteY="363dp" />

            <CheckBox
                android:id="@+id/noseBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nose"
                android:onClick="noseClicked"
                tools:layout_editor_absoluteX="198dp"
                tools:layout_editor_absoluteY="405dp" />

            <CheckBox
                android:id="@+id/shoesBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shoes"
                android:onClick="shoesClicked"
                tools:layout_editor_absoluteX="198dp"
                tools:layout_editor_absoluteY="437dp" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>
